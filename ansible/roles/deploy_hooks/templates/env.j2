APP_NAME=Mensa
APP_ENV={{ app.env }}
APP_KEY={{ app.key }}
APP_DEBUG={{ app.debug }}
APP_TIMEZONE=Asia/Hong_Kong
{% if app.env == 'testing' %}
APP_PORT=8000
APP_URL={{ app.url }}:${APP_PORT}
{% else %}
APP_URL={{ app.url }}
{% endif %}
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_HK

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# database (default)
DB_CONNECTION={{ database.mensa.type }}
DB_HOST={{ database.mensa.host }}
DB_PORT={{ database.mensa.port }}
DB_DATABASE={{ database.mensa.name }}
DB_USERNAME={{ database.mensa.user }}
DB_PASSWORD={{ database.mensa.password }}

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

ADMISSION_TEST_QUOTA_VALIDITY_MONTHS=12

TWILIO_AUTH_SID={{ twilio.auth.sid }}
TWILIO_AUTH_TOKEN={{ twilio.auth.token }}
TWILIO_WHATSAPP_FROM="{{ twilio.whatsapp.number }}"
TWILIO_WHATSAPP_VERIFICATION_CODE_TEMPLATE_ID="{{ twilio.whatsapp.template_ids.verification_code }}"
TWILIO_WHATSAPP_NEW_PASSWORD_TEMPLATE_ID="{{ twilio.whatsapp.template_ids.new_password }}"

STRIPE_PUBLIC_KEY={{ stripe.public_key }}
STRIPE_SECRET_KEY={{ stripe.secret_key }}
STRIPE_WEBHOOK_KEY={{ stripe.webhook_key }}
STRIPE_TRANSACTION_LIFETIME=30
STRIPE_WEBHOOK_LIFETIME=300

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
VITE_APP_DESCRIPTION="Mensa Hong Kong is a regional chapter of Mensa, offering exciting social, cultural, and intellectual opportunities. We welcome anyone whose IQ ranks in the top 2% of the population."
VITE_SESSION_LIFETIME="${SESSION_LIFETIME}"
VITE_APP_URL="${APP_URL}"
VITE_APP_TIMEZONE="${APP_TIMEZONE}"
